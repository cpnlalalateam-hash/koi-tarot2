    <script>
        // -----------------------------------------------------------
        // 1. ãƒ‡ãƒ¼ã‚¿å®šç¾© (ã‚¿ãƒ­ãƒƒãƒˆã‚«ãƒ¼ãƒ‰ã®æƒ…å ±)
        // -----------------------------------------------------------

        const TAROT_DECK = [
            { name: "æ‹äººãŸã¡", meaning: "æ„›ã®é¸æŠã€çµã°ã‚Œã‚‹é‹å‘½ã€èª¿å’Œ", reversal: "èª˜æƒ‘ã€å¤±æ‹ã€èª¤ã£ãŸé¸æŠ" },
            { name: "åŠ›", meaning: "æ„å¿—ã®å¼·ã•ã€å„ªã—ã•ã€å¿è€åŠ›", reversal: "ç„¡åŠ›ã€è‡ªä¿¡å–ªå¤±ã€å‚²æ…¢" },
            { name: "éš è€…", meaning: "å†…çœã€æ…é‡ã€æ¢æ±‚", reversal: "é–‰é–çš„ã€å­¤ç‹¬ã€é€ƒé¿" },
            { name: "é‹å‘½ã®è¼ª", meaning: "è»¢æ©Ÿã€ãƒãƒ£ãƒ³ã‚¹åˆ°æ¥ã€å¹¸é‹", reversal: "çŠ¶æ³ã®æ‚ªåŒ–ã€ã™ã‚Œé•ã„ã€åœæ»" },
            { name: "ç¯€åˆ¶", meaning: "ãƒãƒ©ãƒ³ã‚¹ã€å”åŠ›ã€èª¿æ•´", reversal: "æµªè²»ã€ä¸èª¿å’Œã€è¡çª" },
            { name: "å¤ªé™½", meaning: "æˆåŠŸã€å–œã³ã€ç¥ç¦ã€çµå©š", reversal: "å¤±æ•—ã€çµ¶æœ›ã€æš—é›²" },
            { name: "æœˆ", meaning: "ä¸å®‰ã€å¹»æƒ³ã€æ›–æ˜§ã•ã€ç§˜å¯†", reversal: "çœŸå®ŸãŒæ˜ã‚‰ã‹ã«ãªã‚‹ã€è§£æ¶ˆ" },
            { name: "æ˜Ÿ", meaning: "å¸Œæœ›ã€ã‚¤ãƒ³ã‚¹ãƒ”ãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³ã€é¡˜ã„ãŒå¶ã†", reversal: "å¤±æœ›ã€ç„¡æ°—åŠ›ã€å¶ã‚ã¬å¤¢" },
            { name: "çš‡å¸", meaning: "æ”¯é…åŠ›ã€å®‰å®šã€è²¬ä»»æ„Ÿ", reversal: "æœªç†Ÿã€å‚²æ…¢ã€å¼·å¼•" },
            { name: "å¥³å¸", meaning: "è±Šã‹ã•ã€å„ªã—ã•ã€åŒ…å®¹åŠ›ã€å¦Šå¨ ", reversal: "ç©ºå›ã‚Šã€ã‚ãŒã¾ã¾ã€æ•£è²¡" },
        ];

        const CARD_POSITIONS = ["**æœªæ¥**", "**ç¾çŠ¶**", "**å¯¾ç­–**"];
        const NUM_CARDS_TO_DRAW = 3;
        const NUM_TOTAL_CARDS = 5; // å ´ã«å‡ºã™ã‚«ãƒ¼ãƒ‰ã®ç·æ•°

        let availableCards = []; // ç¾åœ¨é¸ã¹ã‚‹ã‚«ãƒ¼ãƒ‰ã®ã‚¤ãƒ³ãƒ‡ãƒƒã‚¯ã‚¹
        let selectedCards = []; // é¸æŠã•ã‚ŒãŸã‚«ãƒ¼ãƒ‰ã®æƒ…å ±ã‚’æ ¼ç´
        
        // -----------------------------------------------------------
        // 2. ãƒ¦ãƒ¼ãƒ†ã‚£ãƒªãƒ†ã‚£é–¢æ•°
        // -----------------------------------------------------------

        // é…åˆ—ã‚’ã‚·ãƒ£ãƒƒãƒ•ãƒ«ã™ã‚‹é–¢æ•° (ãƒ•ã‚£ãƒƒã‚·ãƒ£ãƒ¼ãƒ»ã‚¤ã‚§ãƒ¼ãƒ„ãƒ»ã‚·ãƒ£ãƒƒãƒ•ãƒ«)
        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
        }

        // -----------------------------------------------------------
        // 3. UI/ã‚²ãƒ¼ãƒ ãƒ­ã‚¸ãƒƒã‚¯é–¢æ•°
        // -----------------------------------------------------------

        const cardsWrapper = document.getElementById('cards-wrapper');
        const instruction = document.getElementById('instruction');
        const revealBtn = document.getElementById('reveal-btn');
        const resetBtn = document.getElementById('reset-btn');
        const resultModal = document.getElementById('result-modal');
        const readingResult = document.getElementById('reading-result');
        const closeModalBtn = document.getElementById('close-modal-btn');

        // ã‚²ãƒ¼ãƒ ã‚’åˆæœŸåŒ–ã™ã‚‹
        function initializeGame() {
            // 1. ã‚«ãƒ¼ãƒ‰ã®å±±æœ­ã‚’ä½œæˆã—ã€ã‚·ãƒ£ãƒƒãƒ•ãƒ«
            availableCards = [];
            for(let i = 0; i < TAROT_DECK.length; i++) {
                availableCards.push(i);
            }
            shuffleArray(availableCards);
            
            // 2. é¸æŠã•ã‚ŒãŸã‚«ãƒ¼ãƒ‰ã‚’ãƒªã‚»ãƒƒãƒˆ
            selectedCards = [];

            // 3. UIã‚’åˆæœŸçŠ¶æ…‹ã«æˆ»ã™
            instruction.textContent = `æœªæ¥ã€ç¾çŠ¶ã€å¯¾ç­–ã¨ã—ã¦ã€${NUM_CARDS_TO_DRAW}æšã®ã‚«ãƒ¼ãƒ‰ã‚’é¸ã‚“ã§ãã ã•ã„ã€‚`;
            revealBtn.classList.add('opacity-50', 'cursor-not-allowed');
            revealBtn.disabled = true;
            resetBtn.classList.add('hidden');
            resultModal.classList.add('hidden');
            cardsWrapper.innerHTML = ''; // ã‚«ãƒ¼ãƒ‰ã‚³ãƒ³ãƒ†ãƒŠã‚’ç©ºã«ã™ã‚‹

            // 4. å ´ã«ã‚«ãƒ¼ãƒ‰ã‚’é…ç½®
            placeCardsOnTable();
        }

        // ã‚«ãƒ¼ãƒ‰ã‚’å ´ã«é…ç½®ã™ã‚‹
        function placeCardsOnTable() {
            const indicesToUse = availableCards.slice(0, NUM_TOTAL_CARDS); // ãƒ‡ãƒƒã‚­ã®æœ€åˆã®Næšã‚’ä½¿ç”¨
            
            for (let i = 0; i < NUM_TOTAL_CARDS; i++) {
                const cardElement = document.createElement('div');
                cardElement.className = 'tarot-card';
                cardElement.dataset.cardIndex = indicesToUse[i];
                cardElement.textContent = 'ã‚¿ãƒ­ãƒƒãƒˆ';
                cardElement.addEventListener('click', handleCardClick);
                cardsWrapper.appendChild(cardElement);
            }
        }

        // ã‚«ãƒ¼ãƒ‰ãŒã‚¯ãƒªãƒƒã‚¯ã•ã‚ŒãŸã¨ãã®å‡¦ç†
        function handleCardClick(event) {
            const cardElement = event.currentTarget;

            if (selectedCards.length < NUM_CARDS_TO_DRAW) {
                // é¸æŠå¯èƒ½ãªæ®‹ã‚Šæšæ•°ãŒã‚ã‚‹å ´åˆ
                const cardIndex = parseInt(cardElement.dataset.cardIndex);
                
                // æ­£ä½ç½®ã‹é€†ä½ç½®ã‹ã‚’ãƒ©ãƒ³ãƒ€ãƒ ã«æ±ºå®š (0:æ­£ä½ç½®, 1:é€†ä½ç½®)
                const isReversed = Math.random() < 0.5;

                // é¸æŠã•ã‚ŒãŸã‚«ãƒ¼ãƒ‰æƒ…å ±ã‚’è¨˜éŒ²
                selectedCards.push({
                    index: cardIndex,
                    isReversed: isReversed,
                    element: cardElement,
                    position: CARD_POSITIONS[selectedCards.length] // ã©ã®ä½ç½®ã®ã‚«ãƒ¼ãƒ‰ã‹
                });
                
                // UIã‚’æ›´æ–°
                cardElement.classList.add('selected');
                cardElement.textContent = selectedCards.length; // é¸æŠé †åºã‚’è¡¨ç¤º
                
                // èª¬æ˜æ–‡ã‚’æ›´æ–°
                const remaining = NUM_CARDS_TO_DRAW - selectedCards.length;
                if (remaining > 0) {
                    instruction.textContent = `ã‚ã¨ **${remaining}æš** é¸ã‚“ã§ãã ã•ã„ã€‚`;
                } else {
                    instruction.textContent = `3æšé¸ã³çµ‚ã‚ã‚Šã¾ã—ãŸã€‚ã€Œçµæœã‚’è¦‹ã‚‹ã€ãƒœã‚¿ãƒ³ã‚’æŠ¼ã—ã¦ãã ã•ã„ã€‚`;
                }

                // å…¨ã¦é¸ã³çµ‚ã‚ã£ãŸã‚‰çµæœãƒœã‚¿ãƒ³ã‚’æ´»æ€§åŒ–
                if (selectedCards.length === NUM_CARDS_TO_DRAW) {
                    revealBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                    revealBtn.disabled = false;
                }
            }
        }

        // çµæœã‚’è¡¨ç¤ºã™ã‚‹å‡¦ç†
        function revealResult() {
            // 1. çµæœãƒœã‚¿ãƒ³ã‚’éæ´»æ€§åŒ–ã—ã€ãƒªã‚»ãƒƒãƒˆãƒœã‚¿ãƒ³ã‚’è¡¨ç¤º
            revealBtn.classList.add('hidden');
            resetBtn.classList.remove('hidden');

            // 2. ã‚«ãƒ¼ãƒ‰ã‚’ã‚ªãƒ¼ãƒ—ãƒ³ã—ã€æ„å‘³ã‚’è¡¨ç¤º
            selectedCards.forEach(card => {
                const data = TAROT_DECK[card.index];
                card.element.classList.remove('selected');
                card.element.classList.add('revealed', 'bg-white');
                card.element.innerHTML = `
                    <span class="text-xs font-bold text-gray-500">${card.position}</span>
                    <span class="text-lg font-extrabold text-red-500">${data.name}</span>
                    <span class="text-sm font-normal text-gray-700">${card.isReversed ? 'é€†ä½ç½®' : 'æ­£ä½ç½®'}</span>
                `;
            });
            
            // 3. æ®‹ã‚Šã®ã‚«ãƒ¼ãƒ‰ã‚’éæ´»æ€§åŒ–
            const remainingCards = Array.from(cardsWrapper.children).filter(card => !card.classList.contains('revealed'));
            remainingCards.forEach(card => card.style.opacity = '0.5');

            // 4. ãƒ¢ãƒ¼ãƒ€ãƒ«ã«çµæœãƒ†ã‚­ã‚¹ãƒˆã‚’ç”Ÿæˆã—ã¦è¡¨ç¤º
            generateAndShowReading();
        }

        // å ã„çµæœã®æ–‡ç« ã‚’ç”Ÿæˆã—ã€ãƒ¢ãƒ¼ãƒ€ãƒ«ã«è¡¨ç¤ºã™ã‚‹
        function generateAndShowReading() {
            let resultHTML = '';

            // å„ã‚«ãƒ¼ãƒ‰ã®çµæœã‚’è©³ç´°ã«è¡¨ç¤º
            selectedCards.forEach((cardInfo, index) => {
                const data = TAROT_DECK[cardInfo.index];
                const direction = cardInfo.isReversed ? 'é€†ä½ç½®' : 'æ­£ä½ç½®';
                const meaning = cardInfo.isReversed ? data.reversal : data.meaning;

                resultHTML += `
                    <div class="border-b pb-4 last:border-b-0">
                        <h3 class="text-xl font-bold text-gray-700 mb-2">${CARD_POSITIONS[index]}ã®ã‚«ãƒ¼ãƒ‰ï¼š<span class="text-red-500">${data.name}</span> (${direction})</h3>
                        <p class="text-base leading-relaxed">
                            <span class="font-bold text-pink-700">ã€ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰ã€‘</span>${meaning}
                        </p>
                    </div>
                `;
            });

            // ç·åˆã‚¢ãƒ‰ãƒã‚¤ã‚¹ (ç°¡æ½”ãªã¾ã¨ã‚)
            const summaryAdvice = getSummaryAdvice(selectedCards);

            resultHTML += `
                <div class="bg-yellow-50 p-4 rounded-lg border-2 border-yellow-300">
                    <h3 class="text-xl font-bold text-yellow-800 mb-2">âœ¨ ç·åˆã‚¢ãƒ‰ãƒã‚¤ã‚¹ âœ¨</h3>
                    <p class="text-base leading-relaxed text-yellow-900">${summaryAdvice}</p>
                </div>
            `;

            readingResult.innerHTML = resultHTML;
            resultModal.classList.remove('hidden'); // ãƒ¢ãƒ¼ãƒ€ãƒ«ã‚’è¡¨ç¤º
        }

        // ç°¡æ˜“çš„ãªç·åˆã‚¢ãƒ‰ãƒã‚¤ã‚¹ã®ç”Ÿæˆ
        function getSummaryAdvice(cards) {
            const futureCard = cards.find(c => c.position.includes('æœªæ¥'));
            const presentCard = cards.find(c => c.position.includes('ç¾çŠ¶'));
            const adviceCard = cards.find(c => c.position.includes('å¯¾ç­–'));

            let advice = "ã“ã®å ã„ã¯ã‚ãªãŸã®æ‹ã®è¡Œæ–¹ã‚’ç¤ºã—ã¦ã„ã¾ã™ã€‚";

            if (futureCard && futureCard.name === "å¤ªé™½") {
                advice += `æœªæ¥ã«ã¯ã€Œå¤ªé™½ã€ãŒå‡ºã¦ãŠã‚Šã€ã¨ã¦ã‚‚æ˜ã‚‹ã„å…†ã—ã§ã™ï¼è‡ªä¿¡ã‚’æŒã£ã¦è¡Œå‹•ã—ã¾ã—ã‚‡ã†ã€‚`;
            } else if (adviceCard && adviceCard.isReversed && adviceCard.name === "åŠ›") {
                advice += `ã€Œå¯¾ç­–ã€ã®ã‚«ãƒ¼ãƒ‰ãŒé€†ä½ç½®ã®ã€ŒåŠ›ã€ã§ã™ã€‚ç„¦ã‚‰ãšã€ä»Šã¯ä¸€æ­©å¼•ã„ã¦çŠ¶æ³ã‚’è¦³å¯Ÿã™ã‚‹å†·é™ã•ãŒå¿…è¦ã§ã™ã€‚`;
            } else if (presentCard && presentCard.name === "æ‹äººãŸã¡" && !presentCard.isReversed) {
                advice += `ç¾çŠ¶ã¯ã€Œæ‹äººãŸã¡ã€ã®æ­£ä½ç½®ã€‚ä»Šã¯æ„›ã®èª¿å’ŒãŒå–ã‚Œã¦ã„ã‚‹çŠ¶æ…‹ã§ã™ã€‚ã“ã®æµã‚Œã‚’å¤§åˆ‡ã«ã—ã¦ãã ã•ã„ã€‚`;
            } else {
                advice += `ã‚«ãƒ¼ãƒ‰ã¯æœªæ¥ã€ç¾çŠ¶ã€å¯¾ç­–ãã‚Œãã‚Œã®é‡è¦ãªãƒ’ãƒ³ãƒˆã‚’ä¸ãˆã¦ãã‚Œã¦ã„ã¾ã™ã€‚ç‰¹ã«ã€Œå¯¾ç­–ã€ã®ã‚«ãƒ¼ãƒ‰ã®æ„å‘³ã‚’æ·±ãèª­ã¿è§£ãã€è¡Œå‹•ã«æ´»ã‹ã—ã¾ã—ã‚‡ã†ã€‚`;
            }
            return advice;
        }


        // -----------------------------------------------------------
        // 4. ã‚¤ãƒ™ãƒ³ãƒˆãƒªã‚¹ãƒŠãƒ¼ã®è¨­å®š
        // -----------------------------------------------------------

        // çµæœã‚’è¦‹ã‚‹ãƒœã‚¿ãƒ³
        revealBtn.addEventListener('click', () => {
            if (selectedCards.length === NUM_CARDS_TO_DRAW) {
                revealResult();
            } else {
                // å®‰å…¨è£…ç½®ï¼šã‚‚ã—ãƒœã‚¿ãƒ³ãŒæŠ¼ã›ã¦ã—ã¾ã£ã¦ã‚‚æšæ•°ãŒä¸è¶³ã—ã¦ã„ãŸã‚‰ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’å‡ºã™
                // çµ„ã¿è¾¼ã¿ã®alert()ã¯ä½¿ãˆãªã„ãŸã‚ã€ã‚³ãƒ³ã‚½ãƒ¼ãƒ«ã«å‡ºåŠ›ã—ã¾ã™ã€‚
                console.error("ã‚«ãƒ¼ãƒ‰ã¯3æšé¸ã‚“ã§ãã ã•ã„ã€‚");
            }
        });

        // ã‚‚ã†ä¸€åº¦å ã†ãƒœã‚¿ãƒ³
        resetBtn.addEventListener('click', initializeGame);

        // ãƒ¢ãƒ¼ãƒ€ãƒ«ã‚’é–‰ã˜ã‚‹ãƒœã‚¿ãƒ³
        closeModalBtn.addEventListener('click', () => {
            resultModal.classList.add('hidden');
        });

        // -----------------------------------------------------------
        // 5. ã‚²ãƒ¼ãƒ é–‹å§‹
        // -----------------------------------------------------------

        window.onload = initializeGame; // ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿å®Œäº†å¾Œã«ã‚²ãƒ¼ãƒ é–‹å§‹
    </script>
